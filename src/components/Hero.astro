---
import { heroImages } from "@/data/heroImages";
import "@/styles/embla.scss";
import TextGradient from "./TextGradient.astro";
import Link from "./Link.astro";
import { ROUTES } from "@/constants/routes";
---

<section>
    <div class="hero-bg-container">
        <div class="embla">
            <div class="embla__viewport">
                <div class="embla__container">
                    {
                        heroImages.map((image) => (
                            <div class="embla__slide">
                                <img src={image.url} alt={image.alt} />
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="content">
            <TextGradient
                text="Capturando momentos que duran para siempre"
                tag="h1"
            />
            <p>
                Fotografía profesional que revela la belleza auténtica en cada
                detalle. Experiencia, pasión y visión artística en cada captura.
            </p>
            <div class="btn-container">
                <Link href={ROUTES.PORTFOLIO} type="outline"
                    >Ver Portafolio</Link
                >
                <Link href={ROUTES.CONTACT}>Contactar</Link>
            </div>
        </div>
    </div>
</section>

<script>
    import EmblaCarousel from "embla-carousel";
    import Autoplay from "embla-carousel-autoplay";
    import Fade from "embla-carousel-fade";

    function initEmbla() {
        const emblaNode = document.querySelector(".embla");
        const viewportNode = emblaNode?.querySelector(".embla__viewport");
        if (viewportNode instanceof HTMLElement) {
            EmblaCarousel(viewportNode, { loop: true, dragFree: false }, [
                Autoplay({ playOnInit: true, delay: 9000 }),
                Fade(),
            ]);
        }
    }

    initEmbla();
    document.addEventListener(
        "astro:after-swap",
        () => {
            initEmbla();
        },
        {
            once: false,
        },
    );
</script>

<style type="scss">
    section {
        position: relative;
        height: 100dvh;
        display: flex;
        align-items: center;
        justify-content: center;

        .hero-bg-container {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100dvh;
            z-index: -1;
        }
        .container {
            display: flex;
            justify-content: center;
        }
        .content {
            text-align: center;
            padding: 24px;
            display: flex;
            flex-direction: column;
            gap: 1rem;
            justify-content: center;

            max-width: 85%;

            .btn-container {
                display: flex;
                gap: 1rem;
                justify-content: center;
            }

            h1 {
                font-family: "Inter", sans-serif;

                font-size: 1.75rem;
            }

            p {
                font-family: "Poppins", sans-serif;
                font-size: 0.75rem;
            }

            @media only screen and (min-width: 768px) {
                max-width: 90%;

                h1 {
                    font-size: 3.25rem;
                }

                p {
                    font-size: 1rem;
                }
            }
            @media only screen and (min-width: 1024px) {
                max-width: 70%;

                h1 {
                    font-size: 3.75rem;
                }

                p {
                    font-size: 1.25rem;
                }
            }

            // @media only screen and (min-width: 1536px) {
            //     h1 {
            //         font-size: 4.25rem;
            //     }
            // }
        }
    }
</style>
